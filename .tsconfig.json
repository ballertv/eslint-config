{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "apps/**/*",
    "libs/**/*",
    "app/javascript/**/*",
    "app/typescript/**/*",
    "stories/**/*"
  ],
  "exclude": [
    ".eslintrc.js",
    "node_modules",
    "dist"
  ]
}
